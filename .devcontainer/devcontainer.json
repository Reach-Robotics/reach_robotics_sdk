{
	"name": "ROS Development Environment",

	// Sets the run context to one level up instead of the .devcontainer folder.
	"context": "..",

	// Switch between ROS and ROS 2 dev environments
	"dockerFile": "./foxy-dockerfile",

  // For Windows, privileged mode is not typically needed, and networking differs.
  "runArgs": ["-e", "XDG_RUNTIME_DIR=/tmp"],

  // For Windows, X11 forwarding is not applicable. Mounting your development workspace and necessary directories.
  "mounts": [
    "source=${localWorkspaceFolder},target=/root/workspace/src/reach_robotics_sdk,type=bind",
    "source=/dev,target=/dev,type=bind"
  ],

  // Define your workspace folder within the container
  "workspaceFolder": "/root/workspace/src/reach_robotics_sdk",

  // Install protocol 
  "postCreateCommand": "cd /root/workspace/src/reach_robotics_sdk/bplprotocol && python3 -m pip install .",
  
  // Connect to server root user
  "remoteUser": "root"
}
